<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Faculty_Phone_Valid</fullName>
    <active>true</active>
    <errorConditionFormula>NOT(REGEX( Phone_Number__c , &quot;^[0-9]{10}$&quot;))</errorConditionFormula>
    <errorDisplayField>Phone_Number__c</errorDisplayField>
    <errorMessage>Phone number must contain exactly 10 digits.</errorMessage>
</ValidationRule>
